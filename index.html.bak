<!DOCTYPE html>
  <html>
    <head>
      <title>Watson's Github</title>

      <style>
        body {margin: 0;}
        canvas { width: 100%; height: 100; };
      </style>
    </head>

    <body>
      <h1>Hi I'm Tinky</h1>
      <p>Rawr. Nom.</p>
      <pre>
              __
             /oo\
            |    |
        ^^  (vvvv)   ^^
        \\  /\__/\  //
        \\/      \//
          /        \        
        |          |    ^  
        /          \___/ | 
        (            )     |
        \----------/     /
          //    \\_____/
          W       W</pre>

      <script src="node_modules/three/build/three.js"></script>

      <script>

          var camera = new THREE.PerspectiveCamera( 5, window.innerWidth/window.innerHeight, 0.1, 1000 )
          camera.position.z = 50;

          var scene = new THREE.Scene();
          
          scene.background = new THREE.Color( 0x000000 );
          const ambient = new THREE.HemisphereLight( 0xffffff, 0xbbbbff, 0.3 );
		      scene.add( ambient );    

          const light = new THREE.DirectionalLight();
		      light.position.set( 0.2, 1, 1.5 );
		      scene.add( light );  

          var renderer = new THREE.WebGLRenderer();
          renderer.setSize( window.innerWidth, window.innerHeight );
          document.body.appendChild(renderer.domElement);

          //create shape
          var geometry = new THREE.TorusKnotBufferGeometry(1, 0.2, 100, 50);

          //create mesh material
          var mat = new THREE.MeshPhongMaterial( { color: 0xdbe4eb, specular: 0x444444, shininess: 1000} );
          var object = new THREE.Mesh( geometry, mat);
          scene.add( object );

          // game logic
          var update = function( )
          {
            object.rotation.x += 0.01;
            object.rotation.y += 0.01;
          };

          // draw scene
          var render = function( )
          {
            renderer.render( scene, camera );
          };

          // run game loop (update, render, repeat)
          var MainGameLoop = function( )
          {
            requestAnimationFrame( MainGameLoop );
            update();
            render();
          };

          MainGameLoop();
      </script>
    </body>

  </html>